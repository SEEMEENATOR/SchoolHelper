<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/edit_test.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <script>
        function addOptionToEdit() {
            const container = document.getElementById('optionsContainer');
            const optionDiv = document.createElement('div');
            optionDiv.className = 'test-option';

            optionDiv.innerHTML = `
                <input type="text" class="option-text" placeholder="Вариант ответа" required />
                <input type="checkbox" class="correct-checkbox">
                <button type="button" onclick="removeOption(this)">×</button>
            `;

            container.appendChild(optionDiv);
        }

        function removeOption(button) {
            button.parentElement.remove();
        }

        function prepareEditFormData() {
            const optionTexts = [];
            const correctIndices = [];

            document.querySelectorAll('#optionsContainer .test-option').forEach((opt, index) => {
                const text = opt.querySelector('.option-text').value.trim();
                const isChecked = opt.querySelector('.correct-checkbox').checked;

                if (text !== '') {
                    optionTexts.push(text);
                    if (isChecked) {
                        correctIndices.push(index);
                    }
                }
            });

            document.getElementById('optionTextsRaw').value = optionTexts.join('||');
            document.getElementById('optionCorrectRaw').value = correctIndices.join(',');
        }
    </script>

    <title>Document</title>
</head>
<body>
<form action="/teacher/tests/edit" method="post" onsubmit="prepareEditFormData()">
    <input type="hidden" name="testId" value="{{test.id}}" />

    <label for="question">Вопрос:</label>
    <textarea name="question" id="question" required>{{test.question}}</textarea>

    <label for="questionType">Тип вопроса:</label>
    <select name="questionType" id="questionType" required>
        <option value="SINGLE_CHOICE" {{#isSingleChoice}}selected{{/isSingleChoice}}>Один правильный ответ</option>
        <option value="MULTIPLE_CHOICE" {{#isMultipleChoice}}selected{{/isMultipleChoice}}>Несколько правильных ответов</option>
    </select>

    <div id="optionsContainer">
        {{#test.options}}
            <div class="test-option">
                <input type="text" class="option-text" value="{{text}}" required />
                <input type="checkbox" class="correct-checkbox" {{#correct}}checked{{/correct}} />
                <button type="button" onclick="removeOption(this)">×</button>
            </div>
        {{/test.options}}
    </div>

    <input type="hidden" name="optionTextsRaw" id="optionTextsRaw">
    <input type="hidden" name="optionCorrectRaw" id="optionCorrectRaw">

    <button type="button" onclick="addOptionToEdit()">Добавить вариант</button>
    <button type="submit">Сохранить</button>
</form>

</body>
</html>